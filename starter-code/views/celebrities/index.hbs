<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>


<h2>Celebrities List</h2>

<hr>

<a href="/celebrities/new"  class="button"> Add a new celebrity</a>

<hr>


<div>
{{#each celebrities}}
  <h3>
    {{name}}
  </h3>

<a href="/celebrities/{{_id}}"  class="button"> See Star details</a>
<a href="/celebrities/{{_id}}/edit"  class="button"> Edit star's page</a>

<form action="/celebrities/{{_id}}/delete" method="POST">
<button type="submit"  class="button">Delete</button>
</form>

{{/each}}


</div>

