<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>


<h2>Edit "{{movie.title}}" </h2>

<form action="/movies/{{movie._id}}/edit" method="POST">

<label> Title
    <input type="text" name="title" value="{{movie.title}}">
</label>

<label> Genre
    <input type="text" name="genre" value="{{movie.genre}}">
</label>

<label> Plot
    <textarea name="plot" cols="30" rows="4" value="{{movie.plot}}"> </textarea>
</label>

<label> Celebrity
    <select name="celebrity" required>
    <option value=""> Update celebrity</option>
        {{#each celebrities}}
            {{#eq this.name ../movie.celebrity.name}}  
                <option value={{this._id}} selected> {{this.name}}  </option>   
            {{else}}
                <option value={{this._id}}>{{this.name}}</option>
            {{/eq}}  
        {{/each}}
    </select>
</label>


<button type="submit"> Update </button>

</form>