<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>


<h2>Create a new movie</h2>

<form action="/movies/new" method="POST">

<label> Title
    <input type="text" name="title">
</label>

<label> Genre
    <input type="text" name="genre">
</label>

<label> Plot
    <textarea name="plot" cols="30" rows="4"> </textarea>
</label>

<label> Celebrity
<select name="celebrity" required>
    <option value=""> Choose celebrity</option>
    {{#each celebrities}}
    <option value={{_id}}> {{name}}  </option>  
    {{/each}}
</select>
</label>


<button type="submit"  class="button"> Create </button>

</form>